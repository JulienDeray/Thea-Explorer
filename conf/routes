# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index
GET         /download/:path          controllers.Application.download(path: String)

POST        /setConf                 controllers.Application.setConf()

# JS
GET         /js/interpretedJS        controllers.Application.interpretedJS()
GET         /js/webSocketJs        controllers.Application.webSocketJS()

# WebSocket
GET         /sse                     controllers.Pusher.sse()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
